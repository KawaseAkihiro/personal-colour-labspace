{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "lab_samples.csv schema",
  "description": "Schema for the anonymised sample-level dataset used in personal colour label classification.",
  "type": "object",
  "properties": {
    "sample_id": {
      "type": "string",
      "pattern": "^S\\d{6}$",
      "description": "Unique sample identifier."
    },
    "rgb_hex": {
      "type": "string",
      "pattern": "^#[0-9a-f]{6}$",
      "description": "sRGB colour encoded as #RRGGBB (lowercase hex)."
    },
    "r": { "type": "integer", "minimum": 0, "maximum": 255 },
    "g": { "type": "integer", "minimum": 0, "maximum": 255 },
    "b": { "type": "integer", "minimum": 0, "maximum": 255 },

    "L_star": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "CIE L* lightness (clamped to [0,100] in this release)."
    },
    "a_star": { "type": "number" },
    "b_star": { "type": "number" },

    "tone2_label": {
      "type": "string",
      "enum": ["yellow", "blue", "yellow_blue"],
      "description": "Binary tone label. 'yellow_blue' indicates multi-membership."
    },
    "season_label": {
      "type": "string",
      "enum": [
        "spring",
        "summer",
        "autumn",
        "winter",
        "spring_summer",
        "spring_autumn",
        "spring_winter",
        "summer_autumn",
        "summer_winter",
        "autumn_winter",
        "spring_summer_autumn",
        "spring_summer_winter",
        "spring_autumn_winter",
        "summer_autumn_winter",
        "spring_summer_autumn_winter"
      ],
      "description": "Seasonal label. Multiple seasons are concatenated with underscores to represent multi-membership."
    }
  },
  "required": [
    "sample_id",
    "rgb_hex",
    "r",
    "g",
    "b",
    "L_star",
    "a_star",
    "b_star",
    "tone2_label",
    "season_label"
  ],
  "additionalProperties": false
}
